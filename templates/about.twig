</section>
<div class="row expanded collapse">
	<div class="columns small-12">
		<img src="img/about2.jpg" alt="">
	</div>
</div>
<section id="partnerSection" class="hMargin">
	<div class="row column">
		<h1>We have worked with some great people...</h1>
	</div>
	{% set clentImages = [
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
		'img/clients/google.jpg',
	] %}
	<div class="center-grid">
		<div class="client-row row expanded collapse small-up-2 medium-up-3 large-up-4 text-center small-last{{clentImages|length % 2}} medium-last{{clentImages|length % 3}} large-last{{clentImages|length % 4}}">
			{% for image in clentImages %}
			<div class="columns client-columns center-grid-columns">
				<img src="{{image}}" alt="">
			</div>
			{% endfor %}
		</div>
	</div>
	<div class="row column">
		<h1>...and we were recognised in the process.</h1>
	</div>
	{% set awardImages = [
		{'img':'img/award/one.jpg','year':'2015','award':"Chair's Grand Prix Award"},
		{'img':'img/award/one.jpg','year':'2015','award':"Winner Innovation - SME"},
		{'img':'img/award/two.jpg','year':'2014','award':"Winner Corporate Brochure"},
		{'img':'img/award/three.jpg','year':'2014','award':"Best Education Campaign"},
		{'img':'img/award/four.jpg','year':'2014','award':"Gold for Best Innovation and Creative"},
		{'img':'img/award/four.jpg','year':'2014','award':"Gold for Best Specialist Prospectus"},

	] %}
	<div class="center-grid">
		<div class="row expanded collapse small-up-2 medium-up-3 large-up-4 text-center small-last{{awardImages|length % 2}} medium-last{{awardImages|length % 3}} large-last{{awardImages|length % 4}}">
			{% for image in awardImages %}
			<div class="columns award-columns center-grid-columns">
				<img src="{{image.img}}" alt="">
				<h3>{{image.year}}</h3>
				<strong>{{image.award}}</strong>
			</div>
			{% endfor %}
		</div>
	</div>
</section>
{% endblock %}